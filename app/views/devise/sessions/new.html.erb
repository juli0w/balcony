<div id="login-page" class="row">
  <div class="col s12 z-depth-4 card-panel">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
      <div class="row">
        <div class="input-field col s12 center">
          <h4>Loja do Pintor</h4>
          <p class="center login-form-text">Acesso para clientes</p>
        </div>
      </div>
      <div class="row" style="margin-bottom: 0">
        <div class="input-field col s12">
          <i class="material-icons prefix">perm_identity</i>
          <%= f.text_field :login, id: 'login' %>
          <label for="login">Usuário</label>
        </div>
      </div>
      <div class="row" style="margin-bottom: 0">
        <div class="input-field col s12">
          <i class="material-icons prefix">vpn_key</i>
          <%= f.password_field :password, id: 'password' %>
          <label for="password">Senha</label>
        </div>
      </div>
      <p class="center login-form-text"><%= alert %></p>
      <div class="row">
        <div class="input-field col s12 m12 l12  login-text">
            <%= f.check_box :remember_me, id: 'remember-me' %>
            <label for="remember_me">Lembrar</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.submit "Login", name: "action", class: "btn waves-effect waves-light col s12" %>
        </div>
        <div class="input-field col s12">
          <p class="margin medium-small center"><%= link_to "Ainda não é cadastrado?", new_user_registration_path %></p>
        </div>
      </div>

    <% end %>
  </div>
</div>
