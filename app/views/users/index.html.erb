<div class="container">
  <div class="row">
    <div class="col s12 m12 l12">
      <h4 style="margin-top: 40px;">Usu치rios</h4>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="card-panel">
      <div class="search-offers">
        <%= form_tag users_path, method: :get do %>
            <fieldset style="border: none; margin: 0; padding: 0;">
              <input name="keyword" id="icon_local" style="display: inline;" type="search" placeholder="Filtrar usu치rios" value='<%= params[:keyword] %>'>
              <button class="btn" type="submit" name="action">
                Filtrar
              </button>
          </fieldset>
        <% end %>
      </div>
    </div>

    <div class="card-panel">
      <table class="striped bordered">
        <thead>
          <tr>
              <th data-field="id"></th>
              <th data-field="name">Nome</th>
              <th data-field="name">Usu치rio</th>
              <th data-field="actions"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>

          <tr>
            <td>#<%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.username %></td>
            <td>
              <%= link_to "Editar", [:edit, user] %>
            | <%= link_to "Remover", user, method: :delete, data: { confirm: "Tem certeza?" } %>
            | <%= link_to "Login", [:become, user], method: :post, data: { confirm: "Tem certeza?" } %>
            </td>
          </tr>

          <% end %>
        </tbody>
      </table>

    </div>

    <div class="card-panel">
      <%= link_to "Novo Usu치rio", new_user_path, class: "btn large" %>
    </div>
  </div>
</div>
